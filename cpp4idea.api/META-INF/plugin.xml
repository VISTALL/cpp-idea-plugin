<idea-plugin version="2">
	<id>org.napile.cpp4idea.api</id>
	<name>C/C++ : API Support</name>
	<description>Support for C/C++ language. Based on napile project</description>
	<version>1.0</version>
	<vendor>napile.org</vendor>
	<resource-bundle>org.napile.cpp4idea.CBundle</resource-bundle>
	<idea-version since-build="124.9999"/>
	<category>Custom Languages</category>

	<extensionPoints>
		<extensionPoint name="cdialect" interface="org.napile.cpp4idea.lang.CDialect" />
	</extensionPoints>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceInterface="org.napile.cpp4idea.config.facet.CDialectProvider" serviceImplementation="org.napile.cpp4idea.config.facet.impl.CDialectProviderImpl"/>

		<additionalTextAttributes scheme="Default" file="/org/napile/cpp4idea/editor/color/Default.xml" />

		<fileTypeFactory implementation="org.napile.cpp4idea.CFileTypeFactory" />

		<toolWindow id="Cpp4Idea Debug" icon="/org/napile/cpp4idea/napile-logo13.png" anchor="right" factoryClass="org.napile.cpp4idea.ide.debugToolWindow.DebugToolWindowFactory" />

		<annotator language="C" implementationClass="org.napile.cpp4idea.editor.CHighlightAnnotator" />

		<!--lang-->
		<lang.braceMatcher language="C" implementationClass="org.napile.cpp4idea.lang.PairedBraceMatcherImpl" />
		<lang.syntaxHighlighterFactory key="C" implementationClass="org.napile.cpp4idea.ide.highlight.CSyntaxHighlighterFactory" />
		<lang.parserDefinition language="C" implementationClass="org.napile.cpp4idea.lang.parser.CParserDefinitionImpl" />
		<lang.foldingBuilder language="C" implementationClass="org.napile.cpp4idea.lang.FoldingBuilderImpl"/>
		<lang.commenter language="C" implementationClass="org.napile.cpp4idea.lang.CommenterImpl" />

		<iconProvider implementation="org.napile.cpp4idea.ide.projectView.CIconProvider" />
		<treeStructureProvider implementation="org.napile.cpp4idea.ide.projectView.CProjectViewProvider" />
	</extensions>
</idea-plugin>